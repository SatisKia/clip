#!NAMESPACE image
# 色調補正
#\!- <array> <hue> <saturation> <value>
:include !image:color
:ans FALSE
:param 0 TRUE

!rgb2hsv @@0 @@H @@S @@V

$COL		@w,@@0
$ROW		@h,@@0
$SET_Z		@y
$LOOPSTART	# @y
$SET_Z		@x
$LOOPSTART	# @x
$ADD		@@H @y @x,@1
$ADD		@@S @y @x,@@S @y @x * @2
$ADD		@@V @y @x,@3
$LOOPEND_I	@x,@w
$LOOPEND_I	@y,@h

!hsv2rgb @@H @@S @@V @@0
