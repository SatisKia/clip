#!NAMESPACE image
#バイリニア補間法
#\!- <in_array> <left> <top> <right> <bottom> <width> <height> <out_array>
:include !image:color
:ans FALSE
:param 7 TRUE
$SUB_A		@W,@3,@1
$SUB_A		@H,@4,@2
$SET		@w,@5
$SET		@h,@6
$DIV_A		@M,(@W - 1),(@w - 1)
$DIV_A		@N,(@H - 1),(@h - 1)
$SET_Z		@y
$LOOPSTART	# @y
$SET_Z		@x
$LOOPSTART	# @x
$MODF		@P,(@M * @x + @1),@X
$MODF		@Q,(@N * @y + @2),@Y
$SUB_A		@R,1.0,@P
$SUB_A		@S,1.0,@Q
# 左上
$SET		@c,@@0 @Y @X
$MUL_A		@k,@R,@S
$MUL_A		@r,get_red   @c,@k
$MUL_A		@g,get_green @c,@k
$MUL_A		@b,get_blue  @c,@k
# 右上
$SET		@c,@@0 @Y (@X + 1)
$MUL_A		@k,@P,@S
$MUL_A		@R,get_red   @c,@k
$MUL_A		@G,get_green @c,@k
$MUL_A		@B,get_blue  @c,@k
$ADD		@r,@R
$ADD		@g,@G
$ADD		@b,@B
# 左下
$SET		@c,@@0 (@Y + 1) @X
$MUL_A		@k,@R,@Q
$MUL_A		@R,get_red   @c,@k
$MUL_A		@G,get_green @c,@k
$MUL_A		@B,get_blue  @c,@k
$ADD		@r,@R
$ADD		@g,@G
$ADD		@b,@B
# 右下
$SET		@c,@@0 (@Y + 1) (@X + 1)
$MUL_A		@k,@P,@Q
$MUL_A		@R,get_red   @c,@k
$MUL_A		@G,get_green @c,@k
$MUL_A		@B,get_blue  @c,@k
$ADD		@r,@R
$ADD		@g,@G
$ADD		@b,@B
# ピクセル値
@@7 @y @x = make_color @r @g @b
$LOOPEND_I	@x,@w
$LOOPEND_I	@y,@h
